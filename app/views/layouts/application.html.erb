             <li>
              <%= link_to('Change Password', edit_user_registration_path) %>
            </li>
            <% else %>
            <li>
              <%= link_to('Register', new_user_registration_path)  %>
            </li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    
